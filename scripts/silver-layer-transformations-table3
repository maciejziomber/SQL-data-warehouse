-- Transform table 3 from bronze to silver layer
-- Query the data
SELECT
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    sls_order_dt,
    sls_ship_dt,
    sls_due_dt,
    sls_sales,
    sls_quantity,
    sls_price
  FROM [Integration_Completions_Test].[bronze].[crm_sales_details]

-- Check for unwanted spaces
SELECT
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    sls_order_dt,
    sls_ship_dt,
    sls_due_dt,
    sls_sales,
    sls_quantity,
    sls_price
  FROM [Integration_Completions_Test].[bronze].[crm_sales_details]
  WHERE sls_ord_num != TRIM(sls_ord_num)

-- Check if product keys can be connected between tables
  SELECT
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    sls_order_dt,
    sls_ship_dt,
    sls_due_dt,
    sls_sales,
    sls_quantity,
    sls_price
  FROM [Integration_Completions_Test].[bronze].[crm_sales_details]
  WHERE sls_prd_key NOT IN (SELECT prd_key FROM silver.crm_prd_info)

  -- Check if customer id can be connected between tables
  SELECT
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    sls_order_dt,
    sls_ship_dt,
    sls_due_dt,
    sls_sales,
    sls_quantity,
    sls_price
  FROM [Integration_Completions_Test].[bronze].[crm_sales_details]
  WHERE sls_cust_id NOT IN (SELECT cst_id FROM silver.crm_cust_info)


  -- Check if date is 0 or there is anything wrong with it
  SELECT
  NULLIF(sls_order_dt, 0) AS sls_order_dt
  FROM bronze.crm_sales_details
  WHERE sls_order_dt <= 0 OR LEN(sls_order_dt) != 8

    -- Convert integer to a date and fix the date issues in a query
    SELECT
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    CASE WHEN sls_order_dt = 0 OR LEN(sls_order_dt) != 8 THEN NULL
        ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE) 
    END AS sls_order_dt,
    CASE WHEN sls_ship_dt = 0 OR LEN(sls_ship_dt) != 8 THEN NULL
        ELSE CAST(CAST(sls_ship_dt AS VARCHAR) AS DATE) 
    END AS sls_ship_dt,
    CASE WHEN sls_due_dt = 0 OR LEN(sls_due_dt) != 8 THEN NULL
        ELSE CAST(CAST(sls_due_dt AS VARCHAR) AS DATE) 
    END AS sls_due_dt,
    sls_sales,
    sls_quantity,
    sls_price
  FROM [Integration_Completions_Test].[bronze].[crm_sales_details]

  -- Check if order date and shipping date make sense
  SELECT
  * 
  FROM bronze.crm_sales_details
  
  -- Check data consitency between sales, quantity, and price
  -- Sales = quantity * price (can't be null, negative, or zero)

  SELECT
  sls_sales,
  sls_quantity,
  sls_price
  FROM bronze.crm_sales_details
  WHERE sls_sales != sls_quantity * sls_price 
  OR sls_sales IS NULL OR sls_quantity IS NULL 
  OR sls_sales <= 0 OR sls_quantity <= 0 OR sls_price <= 0

  -- Fix the sales data inconsistency
  SELECT
  sls_sales AS old_sales,
  sls_quantity,
  sls_price AS old_price,
  CASE WHEN sls_sales IS NULL OR sls_sales <= 0 OR sls_sales != sls_quantity * ABS(sls_price) THEN sls_quantity * ABS (sls_price)
    ELSE sls_sales
  END AS sls_sales,
  CASE WHEN sls_price IS NULL OR sls_price <= 0 THEN sls_Sales / NULLIF(sls_quantity, 0)
    ELSE sls_price
  END AS sls_price
  FROM bronze.crm_sales_details
  WHERE sls_sales != sls_quantity * sls_price 
  OR sls_sales IS NULL OR sls_quantity IS NULL 
  OR sls_sales <= 0 OR sls_quantity <= 0 OR sls_price <= 0

  -- Put it back in a query and upload to a table
INSERT INTO silver.crm_sales_details (
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    sls_order_dt,
    sls_ship_dt,
    sls_due_dt,
    sls_sales,
    sls_quantity,
    sls_price
)
     
      SELECT
    sls_ord_num,
    sls_prd_key,
    sls_cust_id,
    CASE WHEN sls_order_dt = 0 OR LEN(sls_order_dt) != 8 THEN NULL
        ELSE CAST(CAST(sls_order_dt AS VARCHAR) AS DATE) 
    END AS sls_order_dt,
    CASE WHEN sls_ship_dt = 0 OR LEN(sls_ship_dt) != 8 THEN NULL
        ELSE CAST(CAST(sls_ship_dt AS VARCHAR) AS DATE) 
    END AS sls_ship_dt,
    CASE WHEN sls_due_dt = 0 OR LEN(sls_due_dt) != 8 THEN NULL
        ELSE CAST(CAST(sls_due_dt AS VARCHAR) AS DATE) 
    END AS sls_due_dt,
     CASE WHEN sls_sales IS NULL OR sls_sales <= 0 OR sls_sales != sls_quantity * ABS(sls_price) THEN sls_quantity * ABS (sls_price)
      ELSE sls_sales
     END AS sls_sales,
    sls_quantity,
    CASE WHEN sls_price IS NULL OR sls_price <= 0 THEN sls_Sales / NULLIF(sls_quantity, 0)
     ELSE sls_price
    END AS sls_price
  FROM [Integration_Completions_Test].[bronze].[crm_sales_details]

  SELECT *
  FROM silver.crm_sales_details
